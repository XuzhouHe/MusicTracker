<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addtofavorite"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/mytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/trackimage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:clickable="true" />

        <TextView
            android:id="@+id/myartist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/mytitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/myposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/length1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/release1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/rank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/gain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"

            />
    </LinearLayout>



    <Button
        android:id="@+id/addtofavorite"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ADD TO FAVORITE"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="410dp"
        app:layout_constraintBottom_toTopOf="@id/addtoplaylist"
        app:layout_constraintTop_toBottomOf="@id/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BACK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addtoplaylist"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="570dp" />

    <Button
        android:id="@+id/addtoplaylist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ADD TO PLAYLIST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/addtoplaylist"

        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="490dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

